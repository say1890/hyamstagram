<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace ="com.juhyang.hyamstagram.user.dao.UserDAO">



<select id ="selectUser" parameterType = "map" resultType = "com.juhyang.hyamstagram.user.model.User">
		SELECT
	user_id,
	loginId,
	password,
	user_name,
	createdAt,
	updatedAt
		FROM
	`user`
		WHERE
	loginId = #{loginId}
		AND
	password = #{password}
	
</select>
<insert id ="insertUser">
	INSERT INTO `user`(
	`loginId`,
	`password`,
	`user_name`,
	`createdAt`,
	`updatedAt`
	)
	values(
	 #{loginId},
	 #{password},
	 #{user_name},
	 now(),
	 now()
	 
	)
	
</insert>
<select id = "countUser" parameterType ="string" resultType="boolean">
	SELECT
			count(1)
	FROM
			`user`
	WHERE
			`loginId`  =	#{loginId}	


</select>
	
	
	
	
</mapper>